{% block body %}
    <body>
    <form method="post" action="{{ path('usuario_delete', {'id': usuario.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ usuario.id) }}">
        <button class="btn btn-danger mr-1"><i class="fas fa-trash-alt"></i></button>
    </form>
    </body>
{% endblock %}