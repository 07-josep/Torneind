{% block body %}
<body id="fondo-descripcion">
<div class="container-fluid mt-1">
    <div class="row justify-content-center mt-4 mb-5 row-form-inscribe">
        <div class="col-5 mt-5">
            <div class="card-blanca">
                <div class="card-header text-center texto-no-torneos">
                    INSCRIPCIÓN A TORNEO
                </div>
                {# read and display all flash messages #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show text-center" role="alert">
                            <strong class="text-center">{{ message }}</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
                <div class="card-body">
                    {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                    {{ form_widget(form) }}
                    <div class="col-12 justify-content-between d-flex">
                        <a><button class="btn btn-primary"><i class="fas fa-check-circle iconos-font"></i>
                                {{ button_label|default('Confirmar inscripción') }}</button></a>
                        <a class="btn btn-danger justify-content-center" href="{{ path('torneo_index') }}"> <i class="fas fa-arrow-circle-left iconos-font"></i> Cancelar inscripción</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
</body>
