{% block body %}
    <body>
    <form method="post" action="{{ path('mensaje_delete', {'id': mensaje.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mensaje.id) }}">
        <button class="btn btn-outline-danger ml-2 mr-2 mb-1"><i class="fas fa-trash-alt"></i></button>
    </form>
    </body>
{% endblock %}
